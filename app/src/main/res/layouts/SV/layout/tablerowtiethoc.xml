<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".sinhvien.SVnavigation">
    <TableLayout
        android:id="@+id/table_recycler_view_tiethoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1,2">

        <TableRow
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/whitetrongsuot">
            <TextView
                android:id="@+id/tiettkbcol"
                android:layout_height="35dp"
                android:layout_column="0"
                android:text="Tiet 1"
                android:layout_width="100dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"
                android:textColor="@color/colornew"/>
            <TextView
                android:id="@+id/mmhtkbcol"
                android:text="TT Điện Tử 1"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_width="250dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"
                android:textColor="@color/black"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>