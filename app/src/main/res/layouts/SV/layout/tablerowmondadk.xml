<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".sinhvien.SVnavigation">
    <TableLayout
        android:id="@+id/table_recycler_view_svdkmon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1,2,3,4,5,6">

        <TableRow>
            <TextView
                android:id="@+id/mmhcol"
                android:layout_height="35dp"
                android:layout_column="0"
                android:text="A1"
                android:layout_width="55dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tenmhcol"
                android:text="TT Điện Tử 1"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_width="140dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/lopcol"
                android:layout_width="49dp"
                android:text="L01"
                android:layout_height="35dp"
                android:layout_column="2"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tietcol"
                android:layout_width="49dp"
                android:layout_height="35dp"
                android:text="1,2"
                android:layout_column="3"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/thucol"
                android:layout_width="49dp"
                android:text="2,3"
                android:layout_height="35dp"
                android:layout_column="4"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"/>
            <Button
                android:id="@+id/xoacol"
                android:layout_width="50dp"
                android:layout_column="5"
                android:layout_height="35dp"
                android:paddingTop="-1dp"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-10dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="X"/>

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>