<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quanly.QLnavigation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:onClick="closekeyboard">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/thongtinsinhvien"
            android:textColor="@color/colornew"
            android:textSize="40sp" />

        <TableLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stretchColumns="1,2">
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="@string/ho"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp"
                    />

                <EditText
                    android:id="@+id/SVhoedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:text="Huỳnh Khả "
                    android:textColor="@color/colornew"
                    android:textSize="@dimen/_10sdp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="@string/ten"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:id="@+id/SVtenedit"
                    android:inputType="text"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giang"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>




            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="Nơi ở hiện tại:"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:id="@+id/SVnoiedit"
                    android:inputType="text"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tân Bình"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="CMND/CCCD:"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:id="@+id/SVcmndedit"
                    android:inputType="text"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000XXX123"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="SĐT liên lạc:"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:id="@+id/SVsdtedit"
                    android:inputType="text"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0xxx123"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="Email:"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:id="@+id/SVmailedit"
                    android:inputType="text"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc@gmail.com"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
        </TableLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/svinfochangeupdate"
            android:layout_marginTop="100dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/capnhat"
            android:layout_gravity="center"
            android:background="@drawable/nextbutton"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/svinfochangeback"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/quaylai"
            android:background="@drawable/backbutton"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>