<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".giangvien.GVnavigation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:onClick="closekeyboard">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/thongtincanhan"
            android:textColor="@color/colornew"
            android:textSize="35sp" />

        <TableLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stretchColumns="1,2">
            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="@string/ho"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp"
                    />

                <TextView
                    android:inputType="text"
                    android:id="@+id/GVhoedit"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn văn "
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colornew"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="@string/ten"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <TextView
                    android:inputType="text"
                    android:id="@+id/GVtenedit"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="Nơi ở hiện tại:"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:inputType="text"
                    android:id="@+id/GVnoiedit"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tân Bình"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="CMND/CCCD:"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:inputType="text"
                    android:id="@+id/GVcmndedit"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000XXX123"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="SĐT liên lạc:"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:inputType="text"
                    android:id="@+id/GVsdtedit"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0xxx123"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:text="Email:"
                    android:textColor="@color/colornew"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_5sdp" />

                <EditText
                    android:inputType="text"
                    android:id="@+id/GVmailedit"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc@gmail.com"
                    android:layout_gravity="center"
                    android:textColor="@color/colornew"/>
            </TableRow>
        </TableLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gvinfochangeupdate"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/capnhat"
            android:layout_gravity="center"
            android:background="@drawable/nextbutton"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gvinfochangeback"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/quaylai"
            android:layout_gravity="center"
            android:background="@drawable/backbutton"/>


    </LinearLayout>
</ScrollView>