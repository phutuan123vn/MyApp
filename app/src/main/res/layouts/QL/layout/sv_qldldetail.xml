                    android:padding="6sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="TT Điện Tử 1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,2"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T2"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A2"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Vật Lí Bán Dẫn"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,4"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T3"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A3"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="6sp" />
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Vật Lí Bán Dẫn"
