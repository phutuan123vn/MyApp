<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".quanly.QLnavigation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="@string/qldlgv"
            android:textColor="#382EEC"
            android:textSize="40sp"
            android:layout_gravity="center"/>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="@string/ho"
                android:textColor="#382EEC"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Nguyễn Văn "
                android:textColor="#382EEC" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="@string/ten"
                android:textColor="#382EEC"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="A"
                android:textColor="#382EEC" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="@string/msgv"
                android:textColor="#382EEC"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Gv191"
                android:textColor="#382EEC" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"

                android:text="@string/monday"
                android:textColor="#382EEC"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="TT Điện tử 1"
                android:textColor="#382EEC" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"

                android:text="@string/ngay"
                android:textColor="#382EEC"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="01/01/2021"
                android:textColor="#382EEC" />
        </TableRow>
        <TableLayout
            android:layout_marginTop="10dp"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:stretchColumns="1,2,3,4"
            android:background="@drawable/border">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_500">

                <TextView
                    android:id="@+id/SVqltkrowho"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hocol"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="6sp" />

                <TextView
                    android:id="@+id/SVqltkrowten"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tencol"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="6sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/SVqltkmssv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mssvcol"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="6sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="6sp"
                    android:text="@string/diemdanhcol"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huỳnh Khả"
                    android:layout_marginStart="6dp"
                    android:padding="6sp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giang"
                    android:layout_marginStart="6dp"
                    android:padding="6sp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SV191"
                    android:padding="6sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="v"
                    android:padding="6sp"/>


            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phú Thiên"
                    android:layout_marginStart="6dp"
                    android:padding="6sp"/>
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuấn"
                    android:layout_marginStart="6dp"
                    android:padding="6sp"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SV192"
                    android:padding="6sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="x"
                    android:padding="6sp"/>

            </TableRow>

        </TableLayout>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/guibandl"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/Gvqldlback"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/quaylai"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>