<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quanly.SVqltk">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/qltksv"
            android:textColor="#382EEC"
            android:textSize="40sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/L1userfill"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="@string/timkiem"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/L1user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="#616161"
                tools:ignore="TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tksv"
            android:textColor="#382EEC"
            android:textSize="20sp"/>

        <TableLayout
            android:layout_marginTop="10dp"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:stretchColumns="1,2,3,4"
            android:background="@drawable/border">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
>

                <TextView
                    android:id="@+id/SVqltkrowho"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hocol"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="6sp" />

                <TextView
                    android:id="@+id/SVqltkrowten"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tencol"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="6sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/SVqltkmssv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mssvcol"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="6sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/SVqltkchange"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="6sp"
                    android:text="@string/tkcol"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huỳnh Khả"
                    android:layout_marginStart="6dp"
                    android:padding="6sp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giang"
                    android:layout_marginStart="6dp"
                    android:padding="6sp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SV191"
                    android:padding="6sp"/>
                <Button
                    android:id="@+id/detailgiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..." />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phú Thiên"
                    android:layout_marginStart="6dp"
                    android:padding="6sp"/>
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuấn"
                    android:layout_marginStart="6dp"
                    android:padding="6sp"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SV192"
                    android:padding="6sp"/>
                <Button
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>
            </TableRow>

        </TableLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>