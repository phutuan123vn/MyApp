<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".quanly.QLnavigation">
    <TableLayout
        android:id="@+id/table_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lnamecol"
                android:layout_height="35dp"
                android:layout_column="0"
                android:text="Huynh Kha"
                android:layout_width="140dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="textStart"
                android:padding="6sp"
                android:background="@drawable/border"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/fnamecol"
                android:text="Giang"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_width="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"/>

            <TextView
                android:id="@+id/mscol"
                android:text="SV00001"
                android:layout_height="35dp"
                android:layout_column="2"
                android:layout_width="60dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="6sp"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/morecol"
                android:background="@drawable/border"
                android:text="Detail"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/colornew"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="3" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>