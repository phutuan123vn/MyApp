<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context=".login.SignUpSV"
    android:background="@drawable/gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:onClick="closekeyboard">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/sign_up"
            android:textColor="@color/colornew"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:text="@string/taotaikhoansv"
            android:textColor="@color/colornewdam"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/ho"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/SULnameHT"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@android:color/holo_red_dark">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SULname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:textColorHint="#616161"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/ten"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/SUFnameHT"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@android:color/holo_red_dark">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SUFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:textColorHint="#616161"
                tools:ignore="TextContrastCheck"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/SUEHT"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@android:color/holo_red_dark">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SUE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="#616161"
                tools:ignore="TextContrastCheck"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="@string/password"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/SUPassHT"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@android:color/holo_red_dark">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SUPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPassword"
                android:textColorHint="#616161"
                tools:ignore="TextContrastCheck"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="@string/password_again"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/SUPassConHT"
            app:helperTextEnabled="false"
            app:helperTextTextColor="@android:color/holo_red_dark">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SUPassCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPassword"
                android:textColorHint="#616161"
                tools:ignore="TextContrastCheck"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text="@string/passwordthoa"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_marginStart="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_marginLeft="70dp">
            <CheckBox
                android:id="@+id/SVBox1"
                android:clickable="false"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">

            </CheckBox>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center|start"
                android:text="@string/boxmin"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_marginStart="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_marginLeft="70dp">
            <CheckBox
                android:id="@+id/SVBox2"
                android:clickable="false"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">

            </CheckBox>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:text="@string/boxnumber"
                android:gravity="center|start"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_marginStart="70dp"
            android:gravity="start"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_marginLeft="70dp">
            <CheckBox
                android:id="@+id/SVBox3"
                android:clickable="false"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">

            </CheckBox>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:text="@string/boxinhoa"
                android:gravity="center|start"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SUbttn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="@string/dangki"
            android:textColor="@color/black"
            android:background="@drawable/nextbutton"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SUback"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/quaylai"
            android:layout_marginTop="5dp"
            android:textColor="@color/whitetrongsuot"
            android:background="@drawable/backbutton"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>