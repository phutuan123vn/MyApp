<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/login"
            android:textColor="#382EEC"
            android:textSize="50sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bttnSV"
            android:layout_marginTop="120dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/sinhvien"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/bttnGV"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/giangvien"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/bttnQL"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/quanly"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/Acforget"
            android:layout_marginTop="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/quenmatkhau"
            android:textColor="#1f16c4"/>
        <TextView
            android:id="@+id/Acsignup"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/taotaikhoan"
            android:textColor="#1f16c4"/>
    </LinearLayout>
</RelativeLayout>