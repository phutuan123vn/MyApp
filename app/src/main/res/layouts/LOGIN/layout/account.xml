<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MainActivity"
    android:background="@drawable/gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/login"
            android:textColor="@color/colornew"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="229dp"
            android:layout_height="234dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/logobk"
            android:contentDescription="pic" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/roundbutt"
            android:elevation="2dp"
            android:id="@+id/bttnSV"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/colornewdam"
            android:textStyle="bold"
            android:text="@string/sinhvien" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/roundbutt"
            android:id="@+id/bttnGV"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/colornewdam"
            android:textStyle="bold"
            android:text="@string/giangvien" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/roundbutt"
            android:id="@+id/bttnQL"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/colornewdam"
            android:textStyle="bold"
            android:text="@string/quanly" />


    </LinearLayout>
</RelativeLayout>